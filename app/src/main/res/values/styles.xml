    <style name="EditTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="MatchedTextViewDataStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_30</item>
        <item name="android:layout_marginRight">@dimen/margin_30</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
