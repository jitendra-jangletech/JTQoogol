<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowDisablePreview">false</item>
        <item name="android:windowIsTranslucent">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
        <item name="textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SettingTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
    </style>

    <style name="TextViewHeadStyle">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_marginLeft">@dimen/margin_30</item>
        <item name="android:layout_marginRight">@dimen/margin_30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?attr/textColorBlack</item>
    </style>

    <style name="FloatingActionButtonSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/textColorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizexSmall</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/textColorBlack</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--
                <item name="android:statusBarColor">@android:color/transparent</item>
        -->
    </style>

    <style name="ChipTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ChipTextStyleActive">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingLeft">@dimen/btn_padding</item>
        <item name="android:paddingRight">@dimen/btn_padding</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="OtpButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingLeft">@dimen/btn_padding</item>
        <item name="android:paddingRight">@dimen/btn_padding</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AutoCompleteTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:popupBackground">@color/colorWhite</item>
        <item name="android:maxLines">1</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">textCapSentences|textNoSuggestions</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="OutLineBoxColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/textColorBlack</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/colorDarkGray</item>
        <item name="boxBackgroundColor">?attr/messageBackgroundColor</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textAlignment">inherit</item>
    </style>

    <style name="GroupSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>


        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#221F1F</item>
    </style>

    <style name="menu_item_style">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/menu_item_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="sub_menu_item_style">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlActivated">@color/colorOrangePeel</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ChipStyle">
        <item name="backgroundTint">@color/colorLightGray</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSkyBlue</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSkyBlue</item>
    </style>

    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/enter_from_left</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="font_style">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="chipTitleStyle">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Custom_Slider_Style" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/slider_overlay</item>
    </style>

    <style name="slider_overlay">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <!-- Newly Added Parameters -->

    <style name="ExpandableHeaderView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_30</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/margin_30</item>
        <item name="android:background">@color/colorLightGray</item>
        <item name="android:drawableEnd">@drawable/ic_add_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">@dimen/btn_padding</item>
        <item name="android:paddingRight">@dimen/btn_padding</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

