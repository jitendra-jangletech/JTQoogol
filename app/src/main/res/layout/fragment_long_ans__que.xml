<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp">

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/subject"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                android:gravity="top"
                android:text="Subject : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/question_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_border"
                android:textSize="@dimen/_12ssp"
                android:hint="Question"
                android:gravity="top"
                android:layout_marginTop="@dimen/_8sdp"
                android:maxLines="15"
                android:minLines="2"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subject" />


            <EditText
                android:id="@+id/questiondesc_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/grey_border"
                android:gravity="top"
                android:hint="Question description"
                android:minLines="3"
                android:textSize="@dimen/_12ssp"
                android:maxLines="10"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_edittext" />



            <EditText
                android:id="@+id/answer_edittext"
                android:background="@drawable/grey_border"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer"
                android:gravity="top"
                android:minLines="12"
                android:maxLines="15"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@+id/questiondesc_edittext"
                android:textColor="@color/colorBlack" />


            <Button
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/answer_edittext"
                android:id="@+id/save_question"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_red"
                android:text="@string/save"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/_2sdp"
                android:textColor="@color/colorWhite"
                app:cornerRadius="@dimen/_50sdp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>