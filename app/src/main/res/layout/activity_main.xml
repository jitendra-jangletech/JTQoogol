<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <include
            android:id="@+id/app_bar_main"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:itemTextColor="@color/colorBlack">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/marginLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/nav_header"
                            layout="@layout/nav_header_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvNavHome"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_learning"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/menu_home"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvNavLearning"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_learning"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/learning" />


                        <TextView
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_test"
                            android:text="@string/test" />

                        <TextView
                            android:id="@+id/nav_practice_test"
                            style="@style/sub_menu_item_style"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/practice_test"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvNavTest"
                            style="@style/sub_menu_item_style"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/my_test" />



                        <TextView
                            android:id="@+id/nav_attended_by_friends"
                            style="@style/sub_menu_item_style"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/attended_by_friends"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/nav_shared_with_you"
                            style="@style/sub_menu_item_style"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/shared_with_you"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/nav_shared_by_you"
                            style="@style/sub_menu_item_style"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/shared_by_you" />

                        <TextView
                            android:id="@+id/nav_test_popular"
                            style="@style/sub_menu_item_style"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/popular_test" />

                        <TextView
                            android:id="@+id/nav_recent_test"
                            style="@style/sub_menu_item_style"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/recent_test" />


                        <TextView
                            android:id="@+id/nav_syllabus"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_settings"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/syllabus" />

                        <TextView
                            android:id="@+id/tvNavDoubt"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_test"
                            android:text="@string/menu_ask_doubts"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/nav_fav"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_learning"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/menu_fav" />

                        <TextView
                            android:id="@+id/saved_questions"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_questions"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/saved_questions" />

                        <TextView
                            android:id="@+id/nav_requests"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_questions"
                            android:text="@string/pending_req" />

                        <TextView
                            android:id="@+id/nav_blocked_connections"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_block"
                            android:text="@string/blockedconnection"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/nav_import_contacts"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_block"
                            android:text="@string/importContacts" />


                        <!--<TextView
                            android:id="@+id/nav_notifications"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_notifications"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/notifications" />-->


                        <TextView
                            android:id="@+id/nav_settings"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_settings"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/settings" />

                        <TextView
                            android:id="@+id/nav_faq"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_settings"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/faq" />

                        <TextView
                            android:id="@+id/nav_share_app"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_share"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/share" />

                        <TextView
                            android:id="@+id/nav_about"
                            style="@style/menu_item_style"
                            android:drawableLeft="@drawable/ic_about"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/about" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:gravity="center"
                                android:text="@string/qoogol_version_1_0"
                                android:textColor="@color/menu_item_text_color"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/copyrights"
                                android:textColor="@color/menu_item_text_color"
                                android:textSize="@dimen/_9ssp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>




            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>