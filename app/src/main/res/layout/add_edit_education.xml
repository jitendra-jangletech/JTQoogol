<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:elevation="@dimen/_40sdp">

        <LinearLayout
            android:id="@+id/top_layout"
            android:weightSum="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:background="@drawable/ic_close_white"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/titletv"
                android:gravity="center_vertical"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Add Education"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15ssp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <com.jangletech.qoogol.view.CustomAutoCompleteTextView
                    android:id="@+id/countryAutocompleteView"
                    style="@style/AutoCompleteTextViewStyle"
                    android:hint="@string/country"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.jangletech.qoogol.view.CustomAutoCompleteTextView
                    android:id="@+id/stateAutocompleteView"
                    style="@style/AutoCompleteTextViewStyle"
                    android:hint="@string/state"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/countryAutocompleteView" />

                <com.jangletech.qoogol.view.CustomAutoCompleteTextView
                    android:id="@+id/cityAutocompleteView"
                    style="@style/AutoCompleteTextViewStyle"
                    android:hint="@string/city"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/stateAutocompleteView" />

                <com.jangletech.qoogol.view.CustomAutoCompleteTextView
                    android:id="@+id/universityBoardAutocompleteView"
                    style="@style/AutoCompleteTextViewStyle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/university"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cityAutocompleteView" />

                <com.jangletech.qoogol.view.CustomAutoCompleteTextView
                    android:id="@+id/instituteAutocompleteView"
                    style="@style/AutoCompleteTextViewStyle"
                    android:hint="@string/institute"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/universityBoardAutocompleteView" />

                <com.jangletech.qoogol.view.CustomAutoCompleteTextView
                    android:id="@+id/degreeAutocompleteView"
                    style="@style/AutoCompleteTextViewStyle"
                    android:hint="@string/degree"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/instituteAutocompleteView" />

                <com.jangletech.qoogol.view.CustomAutoCompleteTextView
                    android:id="@+id/courseAutocompleteView"
                    style="@style/AutoCompleteTextViewStyle"
                    android:hint="@string/course"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/degreeAutocompleteView" />

                <com.jangletech.qoogol.view.CustomAutoCompleteTextView
                    android:id="@+id/classAutocompleteView"
                    style="@style/AutoCompleteTextViewStyle"
                    android:hint="@string/classes"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/courseAutocompleteView" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/date_layout"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/classAutocompleteView"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_startdate"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:hint="@string/start_date"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etstartdate"
                            android:focusable="false"
                            style="@style/EditTextStyle"
                            android:drawableRight="@drawable/ic_date_calender"
                            android:maxLength="15" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_enddate"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:hint="@string/end_date"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etenddate"
                            android:focusable="false"
                            style="@style/EditTextStyle"
                            android:drawableRight="@drawable/ic_date_calender"
                            android:maxLength="15" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="Save"
                    android:id="@+id/save_edu"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date_layout" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>



