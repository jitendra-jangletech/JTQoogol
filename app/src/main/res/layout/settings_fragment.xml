<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.SettingsFragment">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/tvBlockedList"
                style="@style/SettingTextViewStyle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/blocked_list"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_account" />

            <TextView
                android:id="@+id/tvDeactivateAccount"
                style="@style/SettingTextViewStyle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/deactivate_my_account"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_account" />

            <TextView
                android:id="@+id/tvMoreSettings"
                style="@style/SettingTextViewStyle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/more_settings"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_account" />

            <TextView
                android:id="@+id/tvLogout"
                style="@style/SettingTextViewStyle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableStart="@drawable/ic_account"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/logout" />

          <!--  <TextView
                android:id="@+id/tvLogout"
                style="@style/SettingTextViewStyle"
                android:text="@string/logout"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_logout" />-->

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/profile_privacy"
                style="@style/SettingTextViewStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Public"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_8sdp"
                app:switchPadding="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:theme="@style/GroupSwitch"
                android:visibility="gone"/>


        </LinearLayout>











    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>