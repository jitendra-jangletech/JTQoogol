<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp"
        tools:context=".ui.settings.SettingsFragment">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/tvBlockedList"
                style="@style/SettingTextViewStyle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/blocked_list"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_account" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvMoreSettings"
                style="@style/SettingTextViewStyle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/more_settings"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_settings" />

            <CheckBox
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/tvMuteGroupAlerts"
                style="@style/SettingTextViewStyle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableStart="@android:drawable/ic_lock_silent_mode"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/mute_all_group_alerts" />

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:visibility="visible"
                android:id="@+id/tvDeactivateAccount"
                style="@style/SettingTextViewStyle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/deactivate_my_account"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_account" />


            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:text="@string/allow_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:padding="@dimen/_5sdp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/chatchilli"
                    android:visibility="visible"
                    android:id="@+id/checkLoginChatchilli" />

                <CheckBox
                    android:padding="@dimen/_5sdp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/mie"
                    android:visibility="visible"
                    android:id="@+id/checkLoginMie"/>


            </LinearLayout>



            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/tvLogout"
                style="@style/SettingTextViewStyle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/logout" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/profile_privacy"
                style="@style/SettingTextViewStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Public"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_8sdp"
                app:switchPadding="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:theme="@style/GroupSwitch"
                android:visibility="gone"/>


        </LinearLayout>











    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>