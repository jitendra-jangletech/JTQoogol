    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorPrimary"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/qoogol"
                android:layout_marginTop="@dimen/_50sdp"
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAppName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="@string/app_name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_35ssp"
                android:textStyle="bold" />

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/tvAppName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tvWelcomeMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/welcome_msg"
                android:textColor="@color/colorWhite" />

           <!-- <EditText
                android:id="@+id/etEmailMobile"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWelcomeMsg"
                android:hint="Email OR Mobile Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginBottom="@dimen/_50sdp"
                android:textColorHint="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/tvWelcomeMsg"
                android:id="@+id/etMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:backgroundTint="@color/colorDarkGray"
                android:hint="Email or mobile number"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                android:maxLines="1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSizeMedium" />

            <LinearLayout
                android:id="@+id/passwordRootLayout"
                app:layout_constraintTop_toBottomOf="@+id/etMobileNumber"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:textColorHint="@color/colorWhite"
                    android:layout_weight="0.7"
                    android:id="@+id/etPassOTP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etMobileNumber"
                    android:layout_alignStart="@+id/imgLogo"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:backgroundTint="@color/colorDarkGray"
                    android:hint="Password or Otp"
                    android:layout_toStartOf="@+id/resend_otp"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:maxLength="13"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSizeMedium" />

                <TextView
                    android:layout_weight="0.3"
                    android:id="@+id/resend_otp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etMobileNumber"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/gray_border"
                    android:padding="8dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:textColor="@color/colorWhite"
                    android:text="Send OTP"
                    android:textSize="@dimen/textSizexSmall" />


            </LinearLayout>

            <TextView
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordRootLayout"
                android:id="@+id/btnLoginRegister"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etMobileNumber"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_border"
                android:padding="8dp"
                android:textColor="@color/colorWhite"
                android:text="Login / Register"
                android:textSize="@dimen/textSizexSmall" />

            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/btnLoginRegister"
                android:id="@+id/terms_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/terms_privacy"
                android:textColor="@color/colorWhite" />





