                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <com.google.android.material.chip.ChipGroup
                                    android:id="@+id/chipGrpQuestionFilter"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:selectionRequired="true"
                                    app:singleSelection="true">

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chipAll"
                                        style="@style/Widget.MaterialComponents.Chip.Filter"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checkable="true"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center_vertical"
                                        android:minWidth="@dimen/_60sdp"
                                        android:minHeight="@dimen/_40sdp"
                                        android:text="All"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/colorBlack"
                                        android:textStyle="bold"
                                        app:chipBackgroundColor="@drawable/chip_background"
                                        app:chipCornerRadius="@dimen/_1sdp"
                                        app:chipStrokeColor="@color/icon_color"
                                        app:chipStrokeWidth="@dimen/_2sdp" />

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chipAttempted"
                                        style="@style/Widget.MaterialComponents.Chip.Filter"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checkable="true"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center_vertical"
                                        android:minHeight="@dimen/_40sdp"
                                        android:minWidth="@dimen/_60sdp"
                                        android:text="Attempted"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/colorBlack"
                                        android:textStyle="bold"
                                        app:chipBackgroundColor="@drawable/chip_background"
                                        app:chipCornerRadius="@dimen/_1sdp"
                                        app:chipStrokeColor="@color/icon_color"
                                        app:chipStrokeWidth="@dimen/_2sdp" />

                                    <com.google.android.material.chip.Chip
                                        android:id="@+id/chipUnattempted"
                                        style="@style/Widget.MaterialComponents.Chip.Filter"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checkable="true"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center_vertical"
                                        android:minHeight="@dimen/_40sdp"
                                        android:minWidth="@dimen/_60sdp"
                                        android:text="UnAttempted"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/colorBlack"
                                        android:textStyle="bold"
