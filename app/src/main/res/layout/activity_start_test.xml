                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/questionsPaletListRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/indicatorLayout"
                                android:layout_marginBottom="@dimen/_60sdp"
                                android:visibility="gone" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/questionsPaletGridRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/indicatorLayout"
                                android:layout_marginBottom="@dimen/_60sdp" />

                            <TextView
                                android:id="@+id/tvNoQuestions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="No Questions Found, Change The Filter"
                                android:textColor="@color/colorBlack"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </ScrollView>

                    <RelativeLayout
                        android:id="@+id/bottomLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/_15sdp">

                        <Button
                            android:id="@+id/btnSubmitTest"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:text="Submit Test"
                            android:textAllCaps="false" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
