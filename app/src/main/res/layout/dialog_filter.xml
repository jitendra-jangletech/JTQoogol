<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".ui.test.filter.TestFilterFragment">

            <Button
                android:id="@+id/reset"
                style="@style/font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:drawableLeft="@drawable/ic_close"
                android:drawableTint="@color/colorWhite"
                android:fontFamily="sans-serif-thin"
                android:foreground="?attr/selectableItemBackground"
                android:text="Reset All"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:enabled="false"
                android:id="@+id/done"
                style="@style/font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:drawableLeft="@drawable/ic_check"
                android:drawableTint="@color/colorWhite"
                android:fontFamily="sans-serif-thin"
                android:foreground="?attr/selectableItemBackground"
                android:text="Done"
                android:textAllCaps="false"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/subject_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/reset">

                <TextView
                    style="@style/chipTitleStyle"
                    android:text="Select Categories" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/testCategoryChipGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:clickable="true"
                        android:checkable="true"
                        android:focusable="true"
                        android:id="@+id/chipUnitTest"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="U"
                        android:text="Unit Test-Practice"
                        app:chipBackgroundColor="@color/chip_background" />

                    <com.google.android.material.chip.Chip
                        android:clickable="true"
                        android:checkable="true"
                        android:focusable="true"
                        android:id="@+id/chipSemester"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="S"
                        android:text="Semester-Practice"
                        app:chipBackgroundColor="@color/chip_background" />

                    <com.google.android.material.chip.Chip
                        android:clickable="true"
                        android:checkable="true"
                        android:focusable="true"
                        android:id="@+id/chipAnnual"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="A"
                        android:text="Annual-Practice"
                        app:chipBackgroundColor="@color/chip_background" />

                </com.google.android.material.chip.ChipGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/colorLightGray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/chapter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/subject_layout">

                <TextView
                    style="@style/chipTitleStyle"
                    android:text="Select Chapter" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chapterChipGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:selectionRequired="false"
                    app:singleSelection="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/difflevel_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/chapter_layout">


                <TextView
                    style="@style/chipTitleStyle"
                    android:text="Difficulty Level" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/testDifficultyLevelChipGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:clickable="true"
                        android:checkable="true"
                        android:focusable="true"
                        android:id="@+id/chipEasy"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="E"
                        android:text="Easy"
                        app:chipBackgroundColor="@color/chip_background" />

                    <com.google.android.material.chip.Chip
                        android:clickable="true"
                        android:checkable="true"
                        android:focusable="true"
                        android:id="@+id/chipMedium"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="M"
                        android:text="Medium"
                        app:chipBackgroundColor="@color/chip_background" />

                    <com.google.android.material.chip.Chip
                        android:clickable="true"
                        android:checkable="true"
                        android:focusable="true"
                        android:id="@+id/chipHard"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="H"
                        android:text="Hard"
                        app:chipBackgroundColor="@color/chip_background" />

                </com.google.android.material.chip.ChipGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recentPopularLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/difflevel_layout">


                <TextView
                    style="@style/chipTitleStyle"
                    android:text="Select Options" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/testRecentPopularChipGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:clickable="true"
                        android:checkable="true"
                        android:focusable="true"
                        android:id="@+id/chipRecent"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="R"
                        android:text="Recent"
                        app:chipBackgroundColor="@color/chip_background" />

                    <com.google.android.material.chip.Chip
                        android:clickable="true"
                        android:checkable="true"
                        android:focusable="true"
                        android:id="@+id/chipPopular"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="P"
                        android:text="Popular"
                        app:chipBackgroundColor="@color/chip_background" />


                </com.google.android.material.chip.ChipGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/testRatingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/recentPopularLayout">

                <TextView
                    style="@style/chipTitleStyle"
                    android:text="Select Average Rating" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/rating"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:numStars="5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rating_heading" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>