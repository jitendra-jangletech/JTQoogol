<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_50sdp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">

                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/subject"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="top"
                    android:text="Subject : "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:id="@+id/etQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_border"
                    android:gravity="top"
                    android:hint="Question"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:lines="2"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subject" />

                <ToggleButton
                    android:id="@+id/toggleAddQuestDesc"
                    style="@style/font_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:checked="false"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:textAllCaps="false"
                    android:textColor="@color/color_red"
                    android:textOff="Add Question Description"
                    android:textOn="Hide Description"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etQuestion" />


                <EditText
                    android:id="@+id/etQuestionDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/grey_border"
                    android:gravity="top"
                    android:hint="Question description"
                    android:lines="3"
                    android:maxLines="10"
                    android:textColor="@color/colorBlack"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toggleAddQuestDesc" />

                <TextView
                    android:id="@+id/tvRightAnsTitle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_righ_ans"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etQuestionDesc" />

                <RadioGroup
                    android:id="@+id/radiobtn"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRightAnsTitle"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:padding="@dimen/_5sdp"
                        android:text="True"
                        android:layout_weight="1"
                        android:id="@+id/radioTrue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:padding="@dimen/_5sdp"
                        android:text="False"
                        android:layout_weight="1"
                        android:id="@+id/radioFalse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </RadioGroup>

                <Button
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radiobtn"
                    android:id="@+id/save_question"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/color_red"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:textColor="@color/colorWhite"
                    app:cornerRadius="@dimen/_50sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>