<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardMaxElevation="@dimen/_40sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/colorWhite"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_quest_no"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_quest_visited"
            android:gravity="center"
            android:text="1"
            android:layout_marginRight="@dimen/_4sdp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_quest_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If x is a prime number, LCM of x and its successive number would be"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

</androidx.cardview.widget.CardView>