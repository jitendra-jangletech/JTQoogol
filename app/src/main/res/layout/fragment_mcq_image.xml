<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Subject : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/grey_border"
                android:gravity="top"
                android:hint="Question"
                android:minLines="2"
                android:maxLines="10"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subject" />

            <EditText
                android:id="@+id/etQuestionDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/grey_border"
                android:gravity="top"
                android:hint="Question description"
                android:minLines="3"
                android:maxLines="10"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etQuestion" />


            <TextView
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/add_images"
                android:textColor="@color/colorSkyBlue"
                android:text="Add question media"
                app:layout_constraintTop_toBottomOf="@+id/etQuestionDesc"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/queimg_recycler"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_images"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/queimg_recycler">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="@dimen/_135sdp"
                        android:layout_height="@dimen/_135sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/add_grey" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="@dimen/_135sdp"
                        android:layout_height="@dimen/_135sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/add_grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/imageLayout">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="@dimen/_135sdp"
                        android:layout_height="@dimen/_135sdp">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="@dimen/_135sdp"
                            android:layout_height="@dimen/_135sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:src="@drawable/add_grey" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="@dimen/_135sdp"
                        android:layout_height="@dimen/_135sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/add_grey" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/additional_label"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp"
                    android:text="Additional Details:"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/marks_layout"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/additional_label"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/edtmarks"
                        android:layout_weight="1"
                        android:hint="Marks"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp"
                        android:inputType="number"
                        android:maxLength="5"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/edtduration"
                        android:hint="Duration"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/diff_label"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/menu_diff_level"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/grey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/marks_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

                <RadioGroup
                    app:layout_constraintTop_toBottomOf="@+id/diff_label"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/radioDifflevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:id="@+id/radioEasy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:text="Easy" />

                    <RadioButton
                        android:id="@+id/radioMedium"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:text="Medium" />

                    <RadioButton
                        android:id="@+id/radioHard"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:text="Hard" />

                </RadioGroup>

                <TextView
                    android:id="@+id/answer_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:hint="@string/select_righ_ans"
                    android:maxLines="1"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioDifflevel" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ans_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/answer">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/ans_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/ans_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="B"
                        app:layout_constraintLeft_toRightOf="@+id/ans_a"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/ans_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="C"
                        app:layout_constraintLeft_toRightOf="@+id/ans_b"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/ans_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="D"
                        app:layout_constraintLeft_toRightOf="@+id/ans_c"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <Button
                android:id="@+id/save_question"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:backgroundTint="@color/color_red"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                app:cornerRadius="@dimen/_50sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageLayout2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>