<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.test.filter.TestFilterFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnApply"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/subject_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/chipTitleStyle"
                        android:text="Select Subjects" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/subjectsChipGrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:selectionRequired="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/colorBlack" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/chapter_layout"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/chipTitleStyle"
                        android:text="Select Chapter" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chapterChipGrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:selectionRequired="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/colorBlack" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/difflevel_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        style="@style/chipTitleStyle"
                        android:text="Difficulty Level" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/testDifficultyLevelChipGrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:selectionRequired="true"
                        app:singleSelection="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/colorBlack" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rating_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/chipTitleStyle"
                        android:text="Select Rating" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ratingChipGrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:selectionRequired="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/colorBlack" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/testcat_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        style="@style/chipTitleStyle"
                        android:text="Select Test Category" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/testCategoryChipGrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:selectionRequired="true"
                        app:singleSelection="true" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/colorBlack" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/duration_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/chipTitleStyle"
                        android:text="Duration" />

                    <com.warkiz.widget.IndicatorStayLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.warkiz.widget.IndicatorSeekBar
                            android:id="@+id/durationSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:isb_indicator_color="@color/colorAccent"
                            app:isb_indicator_text_color="@color/colorWhite"
                            app:isb_indicator_text_size="18sp"
                            app:isb_max="120"
                            app:isb_min="20"
                            app:isb_only_thumb_draggable="false"
                            app:isb_progress="40"
                            app:isb_seek_smoothly="true"
                            app:isb_show_indicator="rounded_rectangle"
                            app:isb_show_tick_marks_type="oval"
                            app:isb_show_tick_texts="true"
                            app:isb_thumb_color="@color/color_green"
                            app:isb_thumb_size="20dp"
                            app:isb_tick_marks_drawable="@mipmap/ic_launcher"
                            app:isb_tick_marks_size="13dp"
                            app:isb_tick_texts_color="@color/colorAccent"
                            app:isb_tick_texts_size="15sp"
                            app:isb_ticks_count="6"
                            app:isb_track_background_color="@color/colorPrimary"
                            app:isb_track_background_size="2dp"
                            app:isb_track_progress_color="@color/colorAccent"
                            app:isb_track_progress_size="4dp" />

                    </com.warkiz.widget.IndicatorStayLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/colorBlack" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/total_marks_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/chipTitleStyle"
                        android:text="Total Marks" />

                    <com.warkiz.widget.IndicatorStayLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.warkiz.widget.IndicatorSeekBar
                            android:id="@+id/totalMarksSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:isb_indicator_color="@color/colorAccent"
                            app:isb_indicator_text_color="@color/colorWhite"
                            app:isb_indicator_text_size="18sp"
                            app:isb_max="180"
                            app:isb_min="30"
                            app:isb_only_thumb_draggable="false"
                            app:isb_progress="80"
                            app:isb_seek_smoothly="true"
                            app:isb_show_indicator="rounded_rectangle"
                            app:isb_show_tick_marks_type="oval"
                            app:isb_show_tick_texts="true"
                            app:isb_thumb_color="@color/color_green"
                            app:isb_thumb_size="20dp"
                            app:isb_tick_marks_drawable="@mipmap/ic_launcher"
                            app:isb_tick_marks_size="13dp"
                            app:isb_tick_texts_color="@color/colorAccent"
                            app:isb_tick_texts_size="15sp"
                            app:isb_ticks_count="6"
                            app:isb_track_background_color="@color/colorPrimary"
                            app:isb_track_background_size="2dp"
                            app:isb_track_progress_color="@color/colorAccent"
                            app:isb_track_progress_size="4dp" />

                    </com.warkiz.widget.IndicatorStayLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/colorBlack" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/auther_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/chipTitleStyle"
                        android:text="Select Author" />

                    <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                        android:id="@+id/spinnerSearchAuthor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:hintText="Select Author"
                        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:text="Apply" />

    </RelativeLayout>
</layout>