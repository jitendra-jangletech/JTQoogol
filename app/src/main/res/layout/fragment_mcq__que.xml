<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp">

            <EditText
                android:id="@+id/question_edittext"
                android:background="@drawable/grey_border"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Question"
                android:gravity="top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/colorBlack" />


            <EditText
                android:id="@+id/questiondesc_edittext"
                android:background="@drawable/grey_border"
                android:lines="3"
                android:gravity="top"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Question description"
                android:maxLines="10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_edittext"
                android:textColor="@color/colorBlack" />

            <LinearLayout
                android:id="@+id/mcq1_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questiondesc_edittext"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:text="A."
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/mcq1_edittext"
                    style="@style/font_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Option 1"
                    android:maxLines="5"
                    android:layout_weight="0.8"
                    android:textColor="@color/colorBlack" />

                <ImageView
                    android:id="@+id/mc1_edit"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit_blue"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mcq2_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcq1_layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:text="B."
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/mcq2_edittext"
                    style="@style/font_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Option 2"
                    android:maxLines="5"
                    android:layout_weight="0.8"
                    android:textColor="@color/colorBlack" />

                <ImageView
                    android:id="@+id/mcq2_edit"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit_blue"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mcq3_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcq2_layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:text="C."
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/mcq3_edittext"
                    style="@style/font_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Option 3"
                    android:maxLines="5"
                    android:layout_weight="0.8"
                    android:textColor="@color/colorBlack" />

                <ImageView
                    android:id="@+id/mcq3_edit"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit_blue"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mcq4_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcq3_layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:text="D."
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/mcq4_edittext"
                    style="@style/font_style"
                    android:layout_width="0dp"
                    android:maxLines="5"
                    android:layout_height="wrap_content"
                    android:hint="Option 4"
                    android:layout_weight="0.8"
                    android:textColor="@color/colorBlack" />

                <ImageView
                    android:id="@+id/mcq4_edit"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit_blue"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <EditText
                android:id="@+id/answer_edittext"
                android:background="@drawable/grey_border"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer"
                android:maxLines="2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcq4_layout"
                android:textColor="@color/colorBlack" />


            <Button
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/answer_edittext"
                android:id="@+id/save_question"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_red"
                android:text="@string/save"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/_2sdp"
                android:textColor="@color/colorWhite"
                app:cornerRadius="@dimen/_50sdp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>