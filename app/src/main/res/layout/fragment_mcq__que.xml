<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Subject : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/question_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/grey_border"
                android:gravity="top"
                android:hint="Question"
                android:maxLines="15"
                android:minLines="2"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subject" />


            <EditText
                android:id="@+id/questiondesc_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/grey_border"
                android:gravity="top"
                android:hint="Question description"
                android:maxLines="10"
                android:minLines="3"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_edittext" />
            <TextView
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/add_images"
                android:textColor="@color/colorSkyBlue"
                android:text="Add question media"
                app:layout_constraintTop_toBottomOf="@+id/questiondesc_edittext"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/queimg_recycler"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_images"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/mcq1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/queimg_recycler">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="A."
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/mcq1_edittext"
                    style="@style/font_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:hint="Option 1"
                    android:maxLines="5"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:id="@+id/mc1_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_edit_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mcq2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcq1_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="B."
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/mcq2_edittext"
                    style="@style/font_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:hint="Option 2"
                    android:maxLines="5"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:id="@+id/mcq2_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_edit_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mcq3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcq2_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="C."
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/mcq3_edittext"
                    style="@style/font_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:hint="Option 3"
                    android:maxLines="5"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:id="@+id/mcq3_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_edit_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mcq4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcq3_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="D."
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/mcq4_edittext"
                    style="@style/font_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:hint="Option 4"
                    android:maxLines="5"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:id="@+id/mcq4_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_edit_blue" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/additional_label"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                android:text="Additional Details:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcq4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/marks_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/additional_label"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/edtmarks"
                    android:layout_weight="1"
                    android:hint="Marks"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="number"
                    android:maxLength="5"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/edtduration"
                    android:hint="Duration"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/diff_label"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/menu_diff_level"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/grey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/marks_layout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <RadioGroup
                app:layout_constraintTop_toBottomOf="@+id/diff_label"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/radioDifflevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:id="@+id/radioEasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Easy" />

                <RadioButton
                    android:id="@+id/radioMedium"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Medium" />

                <RadioButton
                    android:id="@+id/radioHard"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Hard" />

            </RadioGroup>
            <TextView
                android:id="@+id/answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:hint="Answer"
                android:maxLines="2"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioDifflevel" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ans_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/answer">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/ans_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/ans_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="B"
                    app:layout_constraintLeft_toRightOf="@+id/ans_a"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/ans_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="C"
                    app:layout_constraintLeft_toRightOf="@+id/ans_b"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/ans_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="D"
                    app:layout_constraintLeft_toRightOf="@+id/ans_c"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button
                android:id="@+id/save_question"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:backgroundTint="@color/color_red"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                app:cornerRadius="@dimen/_50sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ans_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>