<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardElevation="@dimen/_5sdp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorSkyBlue"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/id_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/marks_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marks :"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintLeft_toRightOf="@+id/id_textview"
                        app:layout_constraintRight_toLeftOf="@id/markToggle"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ToggleButton
                        android:id="@+id/markToggle"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/button_marked"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn=""
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/question_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="question"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/reset"
                    app:layout_constraintTop_toBottomOf="@+id/header" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/timer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/question_textview">

                    <TextView
                        android:id="@+id/tvtimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="00:00"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:src="@drawable/ic_timer"
                        app:layout_constraintBottom_toBottomOf="@id/tvtimer"
                        app:layout_constraintRight_toLeftOf="@+id/tvtimer"
                        app:layout_constraintTop_toTopOf="@id/tvtimer" />

                    <ImageView
                        android:id="@+id/save_que"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_save"
                        app:layout_constraintBottom_toBottomOf="@id/timer"
                        app:layout_constraintRight_toLeftOf="@+id/timer"
                        app:layout_constraintTop_toTopOf="@id/timer" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expandable_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timer_layout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/answer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/single_choice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/scq1_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/grey_round_order"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <io.github.kexanie.library.MathView
                                    android:id="@+id/scq1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="mcq1"
                                    android:textColor="@color/colorSkyBlue"
                                    app:engine="KaTeX"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <ImageView
                                android:id="@+id/scq1_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_right"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/scq1_layout"
                                app:layout_constraintRight_toRightOf="@+id/scq1_layout"
                                app:layout_constraintTop_toTopOf="@+id/scq1_layout" />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/scq2_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/grey_round_order"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/scq1_layout">

                                <io.github.kexanie.library.MathView
                                    android:id="@+id/scq2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="mcq2"
                                    android:textColor="@color/colorSkyBlue"
                                    app:engine="KaTeX"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <ImageView
                                android:id="@+id/scq2_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_right"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/scq2_layout"
                                app:layout_constraintRight_toRightOf="@+id/scq2_layout"
                                app:layout_constraintTop_toTopOf="@+id/scq2_layout" />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/scq3_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/grey_round_order"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/scq2_layout">

                                <io.github.kexanie.library.MathView
                                    android:id="@+id/scq3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="mcq3"
                                    android:textColor="@color/colorSkyBlue"
                                    app:engine="KaTeX"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <ImageView
                                android:id="@+id/scq3_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_right"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/scq3_layout"
                                app:layout_constraintRight_toRightOf="@+id/scq3_layout"
                                app:layout_constraintTop_toTopOf="@+id/scq3_layout" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/scq4_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/grey_round_order"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/scq3_layout">

                                <io.github.kexanie.library.MathView
                                    android:id="@+id/scq4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="mcq4"
                                    android:textColor="@color/colorSkyBlue"
                                    app:engine="KaTeX"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <ImageView
                                android:id="@+id/scq4_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_right"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/scq4_layout"
                                app:layout_constraintRight_toRightOf="@+id/scq4_layout"
                                app:layout_constraintTop_toTopOf="@+id/scq4_layout" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/scq5_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/grey_round_order"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/scq4_layout">

                                <io.github.kexanie.library.MathView
                                    android:id="@+id/scq5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="mcq5"
                                    android:textColor="@color/colorSkyBlue"
                                    app:engine="KaTeX"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <ImageView
                                android:id="@+id/scq5_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_right"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/scq5_layout"
                                app:layout_constraintRight_toRightOf="@+id/scq5_layout"
                                app:layout_constraintTop_toTopOf="@+id/scq5_layout" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:backgroundTint="@color/color_red"
                            android:text="@string/submit"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            app:cornerRadius="@dimen/_50sdp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/single_choice" />


                        <Button
                            android:id="@+id/submit_and_rate"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:backgroundTint="@color/color_red"
                            android:text="@string/submit_rate"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:visibility="gone"
                            app:cornerRadius="@dimen/_50sdp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/submit" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/submit_view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/answer_layout" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/solution_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_4sdp"
                        android:padding="@dimen/_10sdp"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_view">


                        <TextView
                            android:id="@+id/solution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solution"
                            android:textColor="@color/colorSkyBlue"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/solution_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Answer"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/solution" />

                        <ImageView
                            android:id="@+id/ans_img1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:maxHeight="@dimen/_180sdp"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_menu_share"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/solution_option" />


                        <TextView
                            android:id="@+id/solution_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Answer desc"
                            android:textColor="@color/colorBlack"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ans_img1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/answer_bottom_view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/solution_layout" />


                    <TextView
                        android:id="@+id/difflevel_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Level : "
                        android:textColor="@color/colorSkyBlue"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="visible"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/answer_bottom_view" />

                    <TextView
                        android:id="@+id/difflevel_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="visible"
                        app:layout_constraintLeft_toRightOf="@+id/difflevel_textview"
                        app:layout_constraintTop_toBottomOf="@+id/solution_layout" />


                    <TextView
                        android:id="@+id/attended_count_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Users attempted : "
                        android:textColor="@color/colorSkyBlue"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintRight_toLeftOf="@+id/attempted_value"
                        app:layout_constraintTop_toBottomOf="@+id/answer_bottom_view" />

                    <TextView
                        android:id="@+id/attempted_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/answer_bottom_view" />


                    <View
                        android:id="@+id/upper_bottom_view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/attempted_value" />

                    <LinearLayout
                        android:id="@+id/bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/upper_bottom_view">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/que_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/blue_star"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/ratingvalue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="55"
                                android:textAlignment="textStart"
                                android:textColor="@color/colorBlack"
                                app:layout_constraintBottom_toBottomOf="@+id/que_rating"
                                app:layout_constraintLeft_toRightOf="@+id/que_rating"
                                app:layout_constraintTop_toTopOf="@+id/que_rating" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/like_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/rating"
                            app:layout_constraintTop_toTopOf="parent">

                            <!--<ImageView
                                android:id="@+id/like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_like"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />-->

                            <ToggleButton
                                android:id="@+id/like"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:background="@drawable/button_like"
                                android:checked="false"
                                android:text=""
                                android:textOff=""
                                android:textOn=""
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/like_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="5"
                                android:textAlignment="textStart"
                                android:textColor="@color/colorBlack"
                                app:layout_constraintBottom_toBottomOf="@+id/like"
                                app:layout_constraintLeft_toRightOf="@+id/like"
                                app:layout_constraintTop_toTopOf="@+id/like" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/comment_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/like_layout"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_comment"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/comment_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:text="5"
                                android:textAlignment="textStart"
                                android:textColor="@color/colorBlack"
                                app:layout_constraintBottom_toBottomOf="@+id/comment"
                                app:layout_constraintLeft_toRightOf="@+id/comment"
                                app:layout_constraintTop_toTopOf="@+id/comment" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/share_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/comment_layout"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_share"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/share_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="5"
                                android:textAlignment="textStart"
                                android:textColor="@color/colorBlack"
                                app:layout_constraintBottom_toBottomOf="@+id/share"
                                app:layout_constraintLeft_toRightOf="@+id/share"
                                app:layout_constraintTop_toTopOf="@+id/share" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!--<ImageView
                            android:id="@+id/favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_favorite"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />-->

                        <ToggleButton
                            android:id="@+id/favorite"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/button_favorite"
                            android:checked="false"
                            android:text=""
                            android:textOff=""
                            android:textOn=""
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                    <View
                        android:id="@+id/lower_bottom_view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bottom_layout" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/expand"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/color_red"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="Expand"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"
                    app:cornerRadius="@dimen/_50sdp"
                    app:icon="@drawable/ic_keyboard_arrow_down"
                    app:iconSize="@dimen/_20sdp"
                    app:iconTint="@color/colorWhite"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/expandable_layout" />

                <Button
                    android:id="@+id/close"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/color_red"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="Close"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"
                    app:cornerRadius="@dimen/_50sdp"
                    app:icon="@drawable/ic_keyboard_arrow_up"
                    app:iconSize="@dimen/_20sdp"
                    app:iconTint="@color/colorWhite"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/expandable_layout" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
</layout>
