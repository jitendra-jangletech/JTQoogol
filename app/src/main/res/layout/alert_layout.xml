<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/tvIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:src="@drawable/qoogol"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvIcon"
        android:gravity="start|center"
        android:layout_above="@+id/txt_dia"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/btn_padding"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/actionbar_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btn_padding"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="start|center"
        android:layout_below="@+id/tvIcon"
        android:text="@string/update_desc"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textSizeMedium"
        android:textStyle="normal" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/txt_dia"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            style="@style/ButtonStyle"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/margin_10"
            android:gravity="center"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/no_thanks"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/btnExit"
            style="@style/ButtonStyle"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/update" />
    </LinearLayout>
</RelativeLayout>
