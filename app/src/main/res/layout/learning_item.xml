<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSkyBlue"
                android:padding="@dimen/_10sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/id_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Id"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:text="Recommended time : "
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header">

                <TextView
                    android:id="@+id/subject_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Subject"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/topic_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Topic"
                    android:textAlignment="center"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/chapter_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Subject"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>


            <View
                android:id="@+id/header_view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/colorLightGrey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_layout" />


            <LinearLayout
                android:id="@+id/subheader_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:weightSum="2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_view">


                <TextView
                    android:id="@+id/marks_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Marks"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/category_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Category"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <View
                android:id="@+id/subheader_view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/colorLightGrey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subheader_layout" />


            <io.github.kexanie.library.MathView
                android:id="@+id/question_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               android:layout_margin="@dimen/_10sdp"
                android:text="question"
                android:textColor="@color/colorSkyBlue"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subheader_view" />

            <ImageView
                android:id="@+id/attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_attach_file_black_24dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/question_textview"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/question_textview" />

            <com.skyhope.showmoretextview.ShowMoreTextView
                android:id="@+id/questiondesc_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="question desc"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_textview" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questiondesc_textview">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/answer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:id="@+id/single_choice"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="visible"
                        android:layout_height="wrap_content">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/scq1_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_round_order"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" >

                            <io.github.kexanie.library.MathView
                                android:text="mcq1"
                                android:textColor="@color/colorSkyBlue"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:id="@+id/scq1"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <ImageView
                            android:src="@drawable/ic_right"
                            android:id="@+id/scq1_img"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/scq1_layout"
                            app:layout_constraintTop_toTopOf="@+id/scq1_layout"
                            app:layout_constraintBottom_toBottomOf="@+id/scq1_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/scq2_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/grey_round_order"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/scq1_layout" >

                            <io.github.kexanie.library.MathView
                                android:text="mcq2"
                                android:textColor="@color/colorSkyBlue"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:id="@+id/scq2"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <ImageView
                            android:src="@drawable/ic_right"
                            android:id="@+id/scq2_img"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/scq2_layout"
                            app:layout_constraintTop_toTopOf="@+id/scq2_layout"
                            app:layout_constraintBottom_toBottomOf="@+id/scq2_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/scq3_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/grey_round_order"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/scq2_layout" >

                            <io.github.kexanie.library.MathView
                                android:text="mcq3"
                                android:textColor="@color/colorSkyBlue"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:id="@+id/scq3"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <ImageView
                            android:src="@drawable/ic_right"
                            android:id="@+id/scq3_img"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/scq3_layout"
                            app:layout_constraintTop_toTopOf="@+id/scq3_layout"
                            app:layout_constraintBottom_toBottomOf="@+id/scq3_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/scq4_layout"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_round_order"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/scq3_layout" >

                            <io.github.kexanie.library.MathView
                                android:text="mcq4"
                                android:textColor="@color/colorSkyBlue"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:id="@+id/scq4"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <ImageView
                            android:visibility="gone"
                            android:src="@drawable/ic_right"
                            android:id="@+id/scq4_img"
                            app:layout_constraintRight_toRightOf="@+id/scq4_layout"
                            app:layout_constraintTop_toTopOf="@+id/scq4_layout"
                            app:layout_constraintBottom_toBottomOf="@+id/scq4_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <EditText
                        android:id="@+id/fill_in_the_blanks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grey_border"
                        android:maxLines="2"
                        android:textColor="@color/colorBlack"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/single_choice" />

                    <EditText
                        android:id="@+id/single_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grey_border"
                        android:maxLines="2"
                        android:textColor="@color/colorBlack"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fill_in_the_blanks" />


                    <EditText
                        android:id="@+id/multi_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grey_border"
                        android:gravity="top|start"
                        android:lines="5"
                        android:maxLines="10"
                        android:textColor="@color/colorBlack"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/single_line" />

                    <LinearLayout
                        android:id="@+id/true_false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/multi_line">


                        <TextView
                            android:id="@+id/btntrue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/grey_round_order"
                            android:button="@null"
                            android:text="True"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:textColor="@color/colorSkyBlue"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/btnfalse"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/grey_round_order"
                            android:button="@null"
                            android:text="False"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@color/colorSkyBlue"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:id="@+id/multi_choice"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/true_false"
                        android:visibility="gone"
                        android:layout_height="wrap_content">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/mcq1_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_round_order"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" >

                            <io.github.kexanie.library.MathView
                                android:text="mcq1"
                                android:textColor="@color/colorSkyBlue"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:id="@+id/mcq1"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <ImageView
                            android:src="@drawable/ic_right"
                            android:id="@+id/mcq1_img"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/mcq1_layout"
                            app:layout_constraintTop_toTopOf="@+id/mcq1_layout"
                            app:layout_constraintBottom_toBottomOf="@+id/mcq1_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/mcq2_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/grey_round_order"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mcq1_layout" >

                            <io.github.kexanie.library.MathView
                                android:text="mcq2"
                                android:textColor="@color/colorSkyBlue"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:id="@+id/mcq2"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <ImageView
                            android:src="@drawable/ic_right"
                            android:id="@+id/mcq2_img"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/mcq2_layout"
                            app:layout_constraintTop_toTopOf="@+id/mcq2_layout"
                            app:layout_constraintBottom_toBottomOf="@+id/mcq2_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/mcq3_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/grey_round_order"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mcq2_layout" >

                            <io.github.kexanie.library.MathView
                                android:text="mcq3"
                                android:textColor="@color/colorSkyBlue"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:id="@+id/mcq3"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <ImageView
                            android:src="@drawable/ic_right"
                            android:id="@+id/mcq3_img"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/mcq3_layout"
                            app:layout_constraintTop_toTopOf="@+id/mcq3_layout"
                            app:layout_constraintBottom_toBottomOf="@+id/mcq3_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/mcq4_layout"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_round_order"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mcq3_layout" >

                            <io.github.kexanie.library.MathView
                                android:text="mcq4"
                                android:textColor="@color/colorSkyBlue"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:id="@+id/mcq4"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <ImageView
                            android:visibility="gone"
                            android:src="@drawable/ic_right"
                            android:id="@+id/mcq4_img"
                            app:layout_constraintRight_toRightOf="@+id/mcq4_layout"
                            app:layout_constraintTop_toTopOf="@+id/mcq4_layout"
                            app:layout_constraintBottom_toBottomOf="@+id/mcq4_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Button
                        android:id="@+id/submit"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:backgroundTint="@color/color_red"
                        android:text="Submit"
                        android:textColor="@color/colorWhite"
                        app:cornerRadius="@dimen/_50sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/multi_choice" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/submit_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/colorLightGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/answer_layout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/solution_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_4sdp"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/submit_view">


                    <TextView
                        android:id="@+id/solution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solution"
                        android:textColor="@color/colorSkyBlue"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/solution_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Answer"
                        android:textColor="@color/colorBlack"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/solution" />


                    <TextView
                        android:id="@+id/solution_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Answer desc"
                        android:textColor="@color/colorBlack"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/solution_option" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/answer_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/colorLightGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/solution_layout" />


                <TextView
                    android:id="@+id/difflevel_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Level : "
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/answer_bottom_view" />

                <TextView
                    android:id="@+id/difflevel_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintLeft_toRightOf="@+id/difflevel_textview"
                    app:layout_constraintTop_toBottomOf="@+id/solution_layout" />

                <TextView
                    android:id="@+id/posted_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Posted : "
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintRight_toLeftOf="@+id/posted_value"
                    app:layout_constraintTop_toBottomOf="@+id/solution_layout" />

                <TextView
                    android:id="@+id/posted_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/solution_layout" />

                <TextView
                    android:id="@+id/attended_count_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Users attempted : "
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/difflevel_textview" />

                <TextView
                    android:id="@+id/attempted_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintLeft_toRightOf="@+id/attended_count_textview"
                    app:layout_constraintTop_toBottomOf="@+id/difflevel_textview" />

                <TextView
                    android:id="@+id/last_used_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Last used : "
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintRight_toLeftOf="@+id/posted_value"
                    app:layout_constraintTop_toBottomOf="@+id/difflevel_textview" />

                <TextView
                    android:id="@+id/last_used_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/difflevel_textview" />


                <View
                    android:id="@+id/upper_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/colorLightGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/last_used_value" />


                <LinearLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/upper_bottom_view">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/que_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/ratingvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="55"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintBottom_toBottomOf="@+id/que_rating"
                            app:layout_constraintLeft_toRightOf="@+id/que_rating"
                            app:layout_constraintTop_toTopOf="@+id/que_rating" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/like_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/rating"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_thumb_up_black_24dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/like_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintBottom_toBottomOf="@+id/like"
                            app:layout_constraintLeft_toRightOf="@+id/like"
                            app:layout_constraintTop_toTopOf="@+id/like" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/comment_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/like_layout"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_comment"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/comment_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintBottom_toBottomOf="@+id/comment"
                            app:layout_constraintLeft_toRightOf="@+id/comment"
                            app:layout_constraintTop_toTopOf="@+id/comment" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/share_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/comment_layout"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/share_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="5"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintBottom_toBottomOf="@+id/share"
                            app:layout_constraintLeft_toRightOf="@+id/share"
                            app:layout_constraintTop_toTopOf="@+id/share" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fav"
                        android:layout_weight="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <View
                    android:id="@+id/lower_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/colorLightGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bottom_layout" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/expand"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/color_red"
                android:paddingRight="@dimen/_10sdp"
                android:text="Expand"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10sdp"
                app:cornerRadius="@dimen/_50sdp"
                app:icon="@drawable/ic_keyboard_arrow_down"
                app:iconSize="@dimen/_20sdp"
                app:iconTint="@color/colorWhite"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expandable_layout" />


            <Button
                android:id="@+id/close"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/color_red"
                android:paddingRight="@dimen/_10sdp"
                android:text="Close"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                app:cornerRadius="@dimen/_50sdp"
                app:icon="@drawable/ic_keyboard_arrow_up"
                app:iconSize="@dimen/_20sdp"
                app:iconTint="@color/colorWhite"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expandable_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
