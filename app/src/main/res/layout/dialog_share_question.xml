<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context=".ui.learning.ShareFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:src="?attr/homeAsUpIndicator"
                android:textColor="@color/colorWhite"
                android:tint="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titletv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:text="Share"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toRightOf="@+id/btnClose"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- <com.jangletech.qoogol.view.SearchEditText
                 android:layout_margin="@dimen/_5sdp"
                 android:drawablePadding="@dimen/_5sdp"
                 android:drawableRight="@drawable/ic_close"
                 android:drawableLeft="@drawable/ic_search_new"
                 android:id="@+id/searchView"
                 android:hint="User/Group"
                 android:background="@drawable/grey_border"
                 android:textColor="@color/colorBlack"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:backgroundTintMode="@color/colorWhite"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintLeft_toRightOf="@+id/tvTitle"
                 app:layout_constraintRight_toLeftOf="@+id/tvShare"
                 android:layout_width="@dimen/_180sdp"
                 android:layout_height="wrap_content"/>-->

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/colorLightGray"
                android:backgroundTint="@color/colorDarkGray"
                app:layout_constraintLeft_toRightOf="@+id/titletv"
                app:layout_constraintTop_toTopOf="parent"
                app:queryBackground="@color/colorLightGray"
                app:queryHint="search by name"
                app:searchHintIcon="@drawable/ic_search"
                app:searchIcon="@drawable/ic_search" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/top_layout">

            <EditText
                android:id="@+id/share_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_border"
                android:gravity="left|top"
                android:hint="Add comment.."
                android:lines="5"
                android:maxLines="10"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Share"
                android:textAllCaps="false"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_comment" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/share_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shareButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
              android:layout_width="@dimen/_67sdp"
              android:layout_height="@dimen/_67sdp"
              android:textColor="@color/colorWhite"
              android:textAllCaps="false"
              android:layout_marginRight="@dimen/_20sdp"
              android:layout_marginBottom="@dimen/_20sdp"
              android:gravity="center"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:backgroundTint="@color/colorPrimary"
              android:text="Share" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
