<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/commentlayouyt"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_orange"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/llbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSenderName"
                    android:layout_margin="0dp"
                    android:layout_marginBottom="0dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingTop="2dp"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/text_comment_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:maxWidth="@dimen/_320sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:autoLink="all"
                    android:paddingBottom="8dp"
                    android:text="hi man, how are you         "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/text_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_7sdp"
            android:padding="@dimen/_2sdp"
            android:text="11:40"
            android:textSize="@dimen/_10ssp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/commentlayouyt"
            app:layout_constraintStart_toStartOf="@+id/commentlayouyt" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
